---
import Layout from "./Layout.astro";

const {frontmatter} = Astro.props;
---

<Layout title={frontmatter.title}>
    <main class="p-8 mx-12 mt-6 rounded-md text-gray-300
    flex flex-col bg-slate-800">
        <h1 class="mb-4">{frontmatter.title}</h1>
        <p class="mdx-content-description">{frontmatter.description}</p>
        <div class="mdx-content">
            <slot/>
        </div>
    </main>
</Layout>
<style>
    h1 {
        @apply text-4xl font-bold text-indigo-300 place-self-start
    }

    .mdx-content {

    }

    .mdx-content :global(ul) {
       
    }

    .mdx-content :global(a) {
        @apply hover:animate-pulse        
    }

    .mdx-content :global(li) {
        @apply mb-2 text-slate-400 font-semibold
    }

    .mdx-content :global(h2) {
        @apply text-2xl my-4 font-bold text-indigo-300 place-self-start
    }

    .mdx-content :global(h3) {
        @apply text-lg mt-3 mb-1 font-bold text-indigo-300 place-self-start
    }

    .mdx-content-description {
        @apply text-xl font-medium text-gray-400 place-self-start
    }
</style>